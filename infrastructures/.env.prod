# Production Environment Variables
COMPOSE_PROJECT_NAME=docix-prod

# Database Configuration
POSTGRES_DB=docix
POSTGRES_USER=docix
POSTGRES_PASSWORD=docix_secure_password_2025

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minio_secure_password_2025
MINIO_BUCKET=docix-documents

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=docix
RABBITMQ_DEFAULT_PASS=rabbitmq_secure_password_2025
